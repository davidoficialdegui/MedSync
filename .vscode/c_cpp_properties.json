{
  "version": 4,
  "configurations": [
    {
      "name": "MedSyc-C++",
      "compilerPath": "C:/MinGW/bin/g++.exe",        // tu g++ o clang++
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "gcc-x64",                // o "msvc-x64" si usas MSVC
      "includePath": [
        "${workspaceFolder}/src",                   // aquí están todos tus .hpp/.h
        "${workspaceFolder}/src/**"                 // con ** incluyes subcarpetas
      ],
      "browse": {
        "path": [
          "${workspaceFolder}/src",
          "${workspaceFolder}/src/**"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ]
}
